---
interface Props {
  title: string;
  description: string;
  icon: string;
  color: 'sky' | 'emerald' | 'amber' | 'purple';
  features: string[];
}

const { title, description, icon, color, features } = Astro.props;

const colorMap = {
  sky: { bg: 'bg-sky-500/20', text: 'text-sky-400', ring: 'hover:ring-sky-400/70' },
  emerald: { bg: 'bg-emerald-500/20', text: 'text-emerald-400', ring: 'hover:ring-emerald-400/70' },
  amber: { bg: 'bg-amber-500/20', text: 'text-amber-400', ring: 'hover:ring-amber-400/70' },
  purple: { bg: 'bg-purple-500/20', text: 'text-purple-400', ring: 'hover:ring-purple-400/70' },
};

const colors = colorMap[color];
---

<article class={`group relative overflow-hidden rounded-2xl bg-slate-900/80 p-6 shadow-[0_10px_30px_rgba(0,0,0,0.45)] ring-1 ring-slate-700 ${colors.ring} transition duration-300 ease-out transform-gpu hover:-translate-y-1 hover:scale-[1.01] motion-reduce:transform-none after:absolute after:inset-0 after:opacity-0 group-hover:after:opacity-100 after:transition after:bg-[radial-gradient(400px_120px_at_20%_-20%,rgba(56,189,248,0.20),transparent_60%)]`}>
  <div class="flex items-start gap-4 mb-4">
    <div class={`w-12 h-12 rounded-lg ${colors.bg} flex items-center justify-center flex-shrink-0`}>
      <svg class={`w-6 h-6 ${colors.text}`} fill="none" stroke="currentColor" viewBox={icon}>
        <slot name="icon" />
      </svg>
    </div>
    <div>
      <h3 class="text-xl font-semibold mb-3 text-slate-50">{title}</h3>
    </div>
  </div>
  <p class="text-slate-300/80 mb-4">{description}</p>
  <ul class="space-y-2 text-slate-300/80">
    {features.map((feature) => (
      <li class="flex items-center gap-2">
        <svg class={`w-4 h-4 ${colors.text} flex-shrink-0`} fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
        </svg>
        {feature}
      </li>
    ))}
  </ul>
</article>
