---
interface Props {
  title: string;
  description: string;
  features: string[];
  variant?: 'light' | 'dark';
}

const { title, description, features, variant = 'dark' } = Astro.props;
---

<div class={`${variant === 'dark' ? 'bg-gradient-to-r from-slate-900/50 to-slate-800/50' : 'bg-gradient-to-r from-slate-100 to-slate-50'} rounded-2xl p-8 border ${variant === 'dark' ? 'border-slate-700/50' : 'border-slate-200/50'}`}>
  <div class="text-center">
    <h3 class={`text-2xl font-semibold mb-4 ${variant === 'dark' ? 'text-slate-50' : 'text-slate-900'}`}>{title}</h3>
    <p class={`max-w-4xl mx-auto text-lg leading-relaxed mb-6 ${variant === 'dark' ? 'text-slate-300/90' : 'text-slate-700'}`}>
      {description}
    </p>
    <ul class={`flex flex-col items-stretch gap-3 text-sm text-left divide-y ${variant === 'dark' ? 'divide-slate-700/60 text-slate-400' : 'divide-slate-200/60 text-slate-600'} sm:flex-row sm:flex-wrap sm:justify-center sm:items-center sm:gap-4 sm:divide-y-0`}>
      {features.map((feature) => (
        <span class="flex items-start gap-2 py-2 sm:py-0">
          <svg class="w-4 h-4 text-emerald-400 flex-none" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
          </svg>
          {feature}
        </span>
      ))}
    </ul>
  </div>
</div>
