---
interface Props {
  title: string;
  description: string;
  primaryButtonText?: string;
  primaryButtonLink?: string;
  secondaryButtonText?: string;
  secondaryButtonLink?: string;
  variant?: 'default' | 'compact';
}

const {
  title,
  description,
  primaryButtonText = 'Get Started',
  primaryButtonLink = '/book-a-call',
  secondaryButtonText,
  secondaryButtonLink,
  variant = 'default',
} = Astro.props;
---

<section class={`${variant === 'compact' ? 'max-w-4xl' : 'max-w-6xl'} mx-auto px-0 sm:px-6 text-center`}>
  <div class="bg-gradient-to-r from-emerald-900/50 to-sky-900/50 rounded-2xl p-6 sm:p-8 border border-emerald-700/50">
    <h2 class="text-3xl md:text-4xl font-semibold mb-6">{title}</h2>
    <p class="text-slate-300/90 text-lg mb-8 max-w-2xl mx-auto">
      {description}
    </p>
    <div class="flex flex-wrap justify-center gap-4">
      <a href={primaryButtonLink} class="px-8 py-3 rounded-lg bg-emerald-500 hover:bg-emerald-400 text-slate-900 font-semibold">
        {primaryButtonText}
      </a>
      {secondaryButtonText && (
        <a href={secondaryButtonLink} class="px-8 py-3 rounded-lg border border-emerald-500 text-emerald-400 hover:bg-emerald-500/10 font-semibold">
          {secondaryButtonText}
        </a>
      )}
    </div>
    <p class="text-slate-400 text-sm mt-4">
      <slot name="footer" />
    </p>
  </div>
</section>
