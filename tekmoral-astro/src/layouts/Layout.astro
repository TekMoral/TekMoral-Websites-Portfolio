---
import '../styles/global.css'
const site = 'https://www.tekmoral.com';
const defaultTitle = 'TekMoral — AI‑Ready Websites & Apps';
const defaultDesc = 'TekMoral builds high‑converting websites, custom web apps, and AI solutions for SMEs, schools, and startups.';
const { title = defaultTitle, description = defaultDesc, ogImage, noIndex = false } = Astro.props;
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" sizes="32x32" href="/logo.png" />
		<link rel="apple-touch-icon" sizes="180x180" href="/logo.png" />
		<link rel="shortcut icon" href="/logo.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content={description} />
		<link rel="canonical" href={Astro.url.href} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:type" content="website" />
		<meta property="og:url" content={Astro.url.href} />
		{ogImage && <meta property="og:image" content={ogImage} />}
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		{ogImage && <meta name="twitter:image" content={ogImage} />}
		{noIndex && <meta name="robots" content="noindex, nofollow" />}
		<script type="application/ld+json" set:html={JSON.stringify({
			'@context': 'https://schema.org',
			'@type': 'Organization',
			name: 'TekMoral',
			url: site,
			logo: `${site}/logo.png`
		})}></script>
		<script type="application/ld+json" set:html={JSON.stringify({
			'@context': 'https://schema.org',
			'@type': 'WebSite',
			name: 'TekMoral',
			url: site,
			potentialAction: {
				'@type': 'SearchAction',
				target: `${site}/search?q={search_term_string}`,
				'query-input': 'required name=search_term_string'
			}
		})}></script>
		<script defer data-domain="www.tekmoral.com" src="https://plausible.io/js/script.js"></script>
	</head>
	<body class="min-h-screen bg-slate-950 text-slate-100 antialiased">
	<header class="sticky top-0 z-40 backdrop-blur supports-[backdrop-filter]:bg-slate-950/75 border-b border-slate-800/60">
		<nav class="max-w-6xl mx-auto px-6 py-3 flex items-center justify-between gap-6">
			<a href="/" class="flex flex-col items-center gap-1 font-semibold">
				<img src="/logo.png" alt="TekMoral logo" class="h-10 w-10 md:h-12 md:w-12 rounded-sm object-contain" loading="eager" fetchpriority="high" />
				<span class="text-lg md:text-xl leading-none">TekMoral</span>
			</a>
			<div class="flex items-center gap-6 text-slate-300/90">
				<a href="/services">Services</a>
				<a href="/school-solutions">School Solutions</a>
				<a href="/work">Work</a>
				<a href="/book-a-call" class="px-3 py-1.5 rounded-md bg-sky-500 text-slate-900 font-semibold">Send a Message</a>
			</div>
		</nav>
	</header>
		<slot />
	<footer class="mt-20 border-t border-slate-800/60">
		<div class="max-w-6xl mx-auto px-6 py-10 text-sm text-slate-400">
			<nav aria-label="Footer" class="flex flex-wrap items-center justify-center gap-4">
				<a href="/sitemap-index.xml" class="text-sky-400 hover:text-sky-300">Sitemap</a>
								<a href="https://github.com/TekMOral" target="_blank" rel="noopener noreferrer" class="text-sky-400 hover:text-sky-300">GitHub</a>
				<a href="https://wa.me/08163468669" target="_blank" rel="noopener noreferrer" class="text-sky-400 hover:text-sky-300">WhatsApp</a>
				<a href="https://www.facebook.com/adewale.gabriel.905580" target="_blank" rel="noopener noreferrer" class="text-sky-400 hover:text-sky-300">Facebook</a>
			</nav>
			<div class="mt-4 text-center">
				© 2025 TekMoral. All rights reserved.
			</div>
		</div>
	</footer>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
