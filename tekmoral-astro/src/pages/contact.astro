---
import Layout from '../layouts/Layout.astro';
---
<Layout>
  <section id="contact" class="max-w-3xl mx-auto px-6 py-16">
    <h1 class="text-3xl md:text-4xl font-semibold mb-6">Contact</h1>
    <p class="text-slate-300/90 mb-8">Fill the form and we’ll get back to you within 24–48 hours.</p>
    <form name="contact" method="POST" data-netlify="true" netlify-honeypot="bot-field" class="grid gap-4">
      <input type="hidden" name="form-name" value="contact" />
      <p class="hidden">
        <label>Don’t fill this out: <input name="bot-field" /></label>
      </p>
      <label class="grid gap-2">
        <span class="text-sm text-slate-300/80">Name</span>
        <input class="rounded-md bg-slate-900/50 border border-slate-700 px-3 py-2" name="name" required />
      </label>
      <label class="grid gap-2">
        <span class="text-sm text-slate-300/80">Email</span>
        <input class="rounded-md bg-slate-900/50 border border-slate-700 px-3 py-2" type="email" name="email" required />
      </label>
      <label class="grid gap-2">
        <span class="text-sm text-slate-300/80">Message</span>
        <textarea class="rounded-md bg-slate-900/50 border border-slate-700 px-3 py-2" name="message" rows="5" required></textarea>
      </label>
      <button class="px-5 py-3 rounded-lg bg-sky-500 hover:bg-sky-400 text-slate-900 font-semibold w-fit" type="submit">Send</button>
    </form>
  </section>
</Layout>
