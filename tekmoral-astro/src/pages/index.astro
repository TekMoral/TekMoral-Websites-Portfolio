---
import Layout from '../layouts/Layout.astro';
import HeroSection from '../components/HeroSection.astro';
import FeatureList from '../components/FeatureList.astro';
import ServiceCard from '../components/ServiceCard.astro';
import CTASection from '../components/CTASection.astro';
import servicesData from '../data/services.json';
---

<Layout 
  title="TekMoral — AI‑Ready Websites & Apps that Grow Your Business"
  description="We build high-converting websites, custom web applications, and AI solutions for SMEs, schools, and startups in Lagos, Nigeria. Fast deployment, optimized performance, built to scale."
  ogImage="https://www.tekmoral.com/og-home.png"
>
  <HeroSection
    title="Empowering Businesses and Transforming Lives Through Technology"
    description="We design high-converting websites, custom web applications, and AI solutions for SMEs, schools, and startups. Deployed fast, optimized for performance, and built to scale."
    badge="TekMoral"
    image="/tekmoral_Hero_image.webp"
    imageAlt="TekMoral - Technology Solutions"
    primaryButtonText="Send a Message"
    primaryButtonLink="/book-a-call"
    secondaryButtonText="Explore Services"
    secondaryButtonLink="#services"
  />

  <section class="max-w-6xl mx-auto px-6 py-16">
    <FeatureList
      title="Why Your Business Needs Modern Digital Solutions"
      description="In today's competitive landscape, businesses that don't adapt to digital transformation risk being left behind. Your customers expect seamless online experiences, instant responses, and intelligent solutions."
      features={[
        "Faster Operations",
        "Better Customer Experience",
        "Data-Driven Decisions",
        "Scalable Growth"
      ]}
    />
  </section>

  <section id="services" class="max-w-6xl mx-auto px-6 pb-16">
    <div class="text-center mb-6">
      <h2 class="text-3xl md:text-4xl font-semibold mb-2 text-white">Our Services</h2>
      <p class="text-white max-w-3xl mx-auto">
        Comprehensive solutions designed to modernize your business and drive growth.
      </p>
    </div>

    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-2">
      {servicesData.services.map((service) => (
        <ServiceCard
          title={service.title}
          description={service.description}
          color={service.color as 'sky' | 'emerald' | 'amber' | 'purple'}
          icon={service.icon}
          features={service.features}
        >
          <slot name="icon" />
        </ServiceCard>
      ))}
    </div>
  </section>

  <section class="max-w-6xl mx-auto px-6 pt-4 pb-8">
    <CTASection
      title="Ready to Get Started?"
      description="Join forward-thinking businesses across Nigeria that are already using our solutions to improve operations, engage customers, and scale efficiently."
      primaryButtonText="Schedule Free Consultation"
      primaryButtonLink="/book-a-call"
    >
      <fragment slot="footer">
        Free consultation • No obligation • Local support in Lagos
      </fragment>
    </CTASection>
  </section>
</Layout>
