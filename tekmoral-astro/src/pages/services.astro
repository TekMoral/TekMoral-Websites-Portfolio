---
import Layout from '../layouts/Layout.astro';
import ServiceCard from '../components/ServiceCard.astro';
import CTASection from '../components/CTASection.astro';
import servicesData from '../data/services.json';
---
<Layout 
  title="Our Services — TekMoral" 
  description="Professional web development, AI solutions, and digital transformation services for SMEs, schools, and startups. Custom websites, apps, and consulting."
  ogImage="https://www.tekmoral.com/og-services.png"
>
  <section class="max-w-6xl mx-auto px-6 py-8 md:py-4">
    <h1 class="text-3xl md:text-4xl font-semibold mb-4 text-white">Our Services</h1>
    <p class="text-white mb-8 max-w-3xl">We build high-conversion websites, custom apps, and AI solutions. Explore what we offer below.</p>
    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-2">
      {servicesData.services.map((service) => (
        <ServiceCard
          title={service.title}
          description={service.description}
          color={service.color as 'sky' | 'emerald' | 'amber' | 'purple'}
          icon={service.icon}
          features={service.features}
        >
          <slot name="icon" />
        </ServiceCard>
      ))}
    </div>
  </section>

  <section class="max-w-6xl mx-auto px-6 py-8 md:py-12">
    <CTASection
      title="Ready to Transform Your Business?"
      description="Join forward-thinking businesses across Nigeria that are already using our solutions to improve operations, engage customers, and scale efficiently."
      primaryButtonText="Schedule Free Consultation"
      primaryButtonLink="/book-a-call"
      secondaryButtonText="Learn More"
      secondaryButtonLink="/work"
    >
      <fragment slot="footer">
        Free consultation • No obligation • Local support in Lagos
      </fragment>
    </CTASection>
  </section>
</Layout>
